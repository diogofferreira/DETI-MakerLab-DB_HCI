<Page x:Class="DETI_MakerLab.ProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DETI_MakerLab"
      mc:Ignorable="d" 
      d:DesignHeight="930" d:DesignWidth="1670"
      Background="White"
      Title="ProjectPage">

    <Grid>
        <Label Content="Project Name"  Style="{StaticResource descriptionStyle}" HorizontalAlignment="Left" Margin="420,53,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.573,0.678" Width="146"/>
        <Label Content="Description" Style="{StaticResource descriptionStyle}" HorizontalAlignment="Left" Margin="440,135,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.573,0.678" Width="126"/>
        <Label Content="Members" Style="{StaticResource descriptionStyle}" HorizontalAlignment="Left" Margin="457,260,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.573,0.678" Width="109"/>
        <Label Content="Tags" Style="{StaticResource descriptionStyle}" HorizontalAlignment="Left" Margin="501,468,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.573,0.678" Width="65"/>
        <TextBlock x:Name="project_name" HorizontalAlignment="Left" Height="39" Margin="715,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="480" FontSize="20"/>
        <TextBlock x:Name="project_description" HorizontalAlignment="Left" Height="104" Margin="715,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="480" FontSize="20"/>
        <ListBox x:Name="project_members" HorizontalAlignment="Left" Height="175" Margin="715,260,0,0" VerticalAlignment="Top" Width="480" FontSize="18"/>
        <TextBlock x:Name="project_tags" HorizontalAlignment="Left" Height="39" Margin="715,468,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="480" FontSize="20"/>
        <Button x:Name="manage_project_button" Content="Manage Project" Style="{StaticResource dmlButtonStyle}" HorizontalAlignment="Left" Margin="1404,827,0,0" VerticalAlignment="Top" Width="209" Height="64"/>
        <Separator Foreground="Black" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="847,96,819,-92" Width="4" >
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90.286"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>
        </Separator>
        <Label Content="Last Project Requisitions" Style="{StaticResource bigTitleStyle}" VerticalContentAlignment="Bottom" Margin="555,575,525,0" Width="590" />
        <ListBox x:Name="project_last_requisitions_list" HorizontalAlignment="Left" Height="216" Margin="420,675,0,0" VerticalAlignment="Top" Width="832"/>
    </Grid>
</Page>
