<Page x:Class="DETI_MakerLab.AllProjects"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DETI_MakerLab"
      mc:Ignorable="d" 
      d:DesignHeight="628" d:DesignWidth="1196"
      Background="White"
      Title="AllProjects">
    <Page.Resources>
        <DataTemplate x:Key="ProjectsItem">
            <Grid Background="#4DB6AC" Width="930" Margin="0,10,0,10" Height="85" >
                <Label Content="{Binding Path=ProjectName}" FontSize="34" Foreground="White" HorizontalAlignment="Center"/>
                <Label Content="{Binding Path=MiniDescription}" FontSize="15" Foreground="White" HorizontalAlignment="Center" VerticalContentAlignment="Bottom"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Label Content="Projects List" Style="{StaticResource bigTitleStyle}" Margin="459,43,439,0" Width="298"/>
        <ListBox x:Name="all_projects_listbox" Margin="114,161,114,68" HorizontalContentAlignment="Center" BorderBrush="Transparent" ItemTemplate="{DynamicResource ProjectsItem}" MouseDoubleClick="all_projects_listbox_MouseDoubleClick"/>
    </Grid>
</Page>
