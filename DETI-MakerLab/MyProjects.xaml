<Page x:Class="DETI_MakerLab.MyProjects"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DETI_MakerLab"
      mc:Ignorable="d" 
      d:DesignHeight="628" d:DesignWidth="1196"
      Background="White"
      Title="My Projects">
    <Page.Resources>
        <DataTemplate x:Key="ProjectsItem">
            <Grid Background="#4DB6AC" Width="950" Margin="0,10,0,10" >
                <Label Content="{Binding}" FontSize="34" Foreground="White" HorizontalAlignment="Center"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Label Content="My Projects" Style="{StaticResource bigTitleStyle}" Margin="443,33,463,0" Width="290"/>
        <ListBox x:Name="my_projects_listbox" Margin="114,161,114,68" HorizontalContentAlignment="Center" BorderBrush="Transparent" ItemTemplate="{DynamicResource ProjectsItem}" MouseDoubleClick="my_projects_listbox_MouseDoubleClick" />
    </Grid>
</Page>
